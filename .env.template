# Environment Configuration for UDSv4 QC Validator

# REDCAP Variables
REDCAP_API_TOKEN=token_here
REDCAP_API_URL=url_here

# Project Configuration
ADRC_REDCAP_PROJECT_ID=id_here
PROJECT_ID=id_here

# Path Configuration - Preferrably in this project's root directory
JSON_RULES_PATH_I=path\\to\\file\\config\\I\\rules
JSON_RULES_PATH_I4=path\\to\\file\\config\\I4\\rules
JSON_RULES_PATH_F=path\\to\\file\\config\\F\\rules
OUTPUT_PATH=path\\to\\file\\output

# Output Configuration
QC_OUTPUT_DIR=./output
QC_LOG_LEVEL=INFO

# Performance Configuration for API Requests
QC_MAX_WORKERS=4
QC_TIMEOUT=300
QC_RETRY_ATTEMPTS=3

# Reporting Configuration
QC_GENERATE_HTML_REPORT=true
QC_GENERATE_CSV_REPORT=true
QC_INCLUDE_SUMMARY_STATS=true